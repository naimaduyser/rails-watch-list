<h1>Naima's Film Collection</h1>
<span><%= link_to 'Your Movies', movies_path %> | </span>
<span><%= link_to 'Your Lists', lists_path  %></span>
<br>
<%= link_to 'Add A Movie', movies_new_path %>

  <% @movies.each do |movie| %>
    <h2><%= link_to movie.title, movie_path(movie) %></h2>
    <span><%= movie.year %> | </span>
    <span><%= movie.director %> | </span>
    <span><%= movie.genre %></span>
    <br>
    <%= image_tag("cards/movie_card.jpeg", height: '300px') %>
    <br>
    <p><%= movie.synopsis %></p>
    <br>
    <p><%= movie.list_id %></p>
  <% end %>
