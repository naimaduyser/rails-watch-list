<div class="banner">
  <h1>Naima's Film Collection</h1>
  <br>
  <div class="links">
    <p><%= link_to 'Movies', movies_path %></p>
    <p><%= link_to 'Your Lists', lists_path  %></p>
  </div>
</div>

<div class="add-button">
<%= link_to '+ Add A Movie', movies_new_path %>
</div>

<div class="cards-container">
  <% @movies.each do |movie| %>
  <div class="movie-card">
    <img><%= link_to image_tag(movie.poster_url, :alt => "movie poster"), movie_path(movie)%>
    <h2><%= movie.title %></h2>
    <span><%= movie.year %> | </span>
    <span><%= movie.director %> | </span>
    <span><%= movie.country %> | </span>
    <span><%= movie.genre %></span>
    <br>
    </div>
  <% end %>
</div>
